<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
  </head>
  <body>
    <!--  -->
    <!-- Header -->
    <!--  -->
    <%- include("./partials/header") %>
    <!--  -->
    <!-- slider -->
    <!--  -->
    <div class="container pt-3 pt-md-0">
      <%- include("./partials/carousel", { sliders: sliders }) %>
    </div>
    <!--  -->
    <!-- product list -->
    <!--  -->
    <div class="container py-3">
      <p class="text-uppercase fs-5 fw-bold">Sản phẩm</p>
      <div class="row gy-4">
        <% products.forEach((product) => { %>
        <div class="col-12 col-md-6 col-lg-4">
          <a href="<%= product.href %>">
            <img
              src="<%= product.imgSrc %>"
              class="w-100 h-auto"
              width="100"
              height="75"
              alt="<%= product.name %>"
            />
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <!--  -->
    <!-- Footer -->
    <!--  -->
    <%- include("./partials/footer") %>
  </body>
</html>
